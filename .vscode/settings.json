{
  "json.validate.enable": true,
  "json.schemas": [
    {
      "fileMatch": ["package.json"],
      "schema": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "version": { "type": "string" },
          "description": { "type": "string" },
          "scripts": { "type": "object" },
          "dependencies": { "type": "object" },
          "devDependencies": { "type": "object" }
        }
      }
    }
  ]
}
